<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>

<div class="container">

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    
    <h2>
      Authors
    </h2>

    <table class="table table-striped">
      <thead>
        <td><b>Name</b></td>
        <td class="text-center"><b>Author Info</b></td>
        <td class="text-center"><b>Edit Author</b></td>
      </thead>
      <% @authors.each do |author| %>
        <tr>
          <td><%= author["first_name"]%></td>
          <td class="text-center"><%= link_to '<i class="fa fa-info-circle"></i>'.html_safe, author_path(author) %></td>
          <td class="text-center"><%= link_to '<i class="fa fa-pencil-square"></i>'.html_safe, edit_author_path(author) %></td>
        </tr>
      <% end %>
      <tfoot>
        <tr>
          <td><%= link_to '<i class="fa fa-pencil"></i> Add an author'.html_safe, new_author_path %></td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
        </tr>
      </tfoot>
    </table>

  </div>
  <div class="col-md-2"></div>
</div>

</div>

</body>
</html> 

